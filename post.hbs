{{!< default}}

{{#post}}

<article class="content-post {{post_class}}" role="main">
  <div class="content-post-title">
    <h1>{{title}}</h1>
  </div>
  <div class="content-post-meta">
    <time class="post-date" datetime="{{date format="YYYY-MM-DD"}}">{{date format="DD MMMM YYYY"}}</time>
  </div>
  <div class="content-post-body">
    {{content}}
  </div>
  <div class="content-post-meta post-meta-tags">
    {{tags}}
  </div>
  <div class="content-post-author">
    {{#author}}
    <div class="tile">
      {{#if image}}
      <div class="tile-icon">
        <figure class="avatar avatar-lg">
          <img src="{{image}}" />
        </figure>
      </div>
      {{/if}}
      <div class="tile-content">
        <p class="tile-title"><strong>{{name}}</strong></p>
        {{#if bio}}
            <p class="tile-subtitle">{{bio}}</p>
        {{else}}
            <p>Read <a href="{{url}}">more posts</a> by this author.</p>
        {{/if}}
      </div>
    </div>
    {{/author}}
  </div>
